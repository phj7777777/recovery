<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.mons.sudoku.MainActivity">

    <GridView
        android:layout_width="match_parent"
        android:id="@+id/myGridView"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp"
        android:numColumns="9"
        android:background="#e5e5e5"
        android:layout_height="380dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/button_9"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundbutton"
        android:text="2"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/button_2"
        android:layout_toEndOf="@+id/button_2"
        android:background="@drawable/roundbutton"
        android:text="3"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/button_2"
        android:layout_toEndOf="@+id/button_3"
        android:background="@drawable/roundbutton"
        android:text="4"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/button_9"
        android:layout_toStartOf="@+id/button_6"
        android:background="@drawable/roundbutton"
        android:text="1"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/button_2"
        android:layout_toEndOf="@+id/button_4"
        android:background="@drawable/roundbutton"
        android:text="5"
        android:textSize="22dp" />

    <Button
        android:id="@+id/new_game_button"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignStart="@+id/textView"
        android:layout_alignTop="@+id/button_2"
        android:background="@drawable/roundbutton"
        android:text="New Game"
        android:textColor="#000" />

    <Button
        android:id="@+id/button_9"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/button_8"
        android:layout_toEndOf="@+id/button_8"
        android:background="@drawable/roundbutton"
        android:text="9"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button_8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/button_7"
        android:layout_toEndOf="@+id/button_7"
        android:background="@drawable/roundbutton"
        android:text="8"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/button_6"
        android:layout_toEndOf="@+id/button_6"
        android:background="@drawable/roundbutton"
        android:text="7"
        android:textSize="22dp" />

    <Button
        android:id="@+id/button_6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="147dp"
        android:background="@drawable/roundbutton"
        android:text="6"
        android:textSize="22dp" />

    <TextView
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:textColor="#ffff"
        android:id="@+id/textView"
        android:layout_width="329dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="17dp"
        android:text="Select suitable number and put it into the cell" />

</RelativeLayout>
